@model BookModel
    <div class="container">
        <h3 class="display-4">Add New Book</h3>
        @if(ViewBag.isSuccess)
        {
        <div class="alert alert-success alert-dismissible" role="alert">
            You've added the new book successfully!
            Click <a asp-controller="book" asp-action="getOneBook" asp-route-id="@ViewBag.bookId"> here</a> to view the details.
        </div>
        }
    <form method="post" asp-controller="book" asp-action="AddNewBook">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Add Book" />
        </div>
    </form>
    </div>
