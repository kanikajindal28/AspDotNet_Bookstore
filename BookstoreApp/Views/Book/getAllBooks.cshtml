@*@using BookstoreApp.Models;*@
@model IEnumerable<BookModel>   
    @*if we remove this line then also the view works fine and the data is received. it becomes a dyanamic view*@

@{ 
    ViewData["Title"] = "All Books";
}
<div class="container">
    <h4 class="display-4">List Of All Books</h4>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000">
                        <div class="card-body">
                            <h3 class="card-title">@book.Title</h3>
                            <a href="D:\AspNet\BookstoreApp\BookstoreApp\Views\Book\getAllBooks.cshtml">D:\AspNet\BookstoreApp\BookstoreApp\Views\Book\getAllBooks.cshtml</a>
                            <p class="card-text">@book.Description.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="bth-group">
                                    <a asp-controller="book" asp-action="getonebook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary" asp-fragment="similarbooks">View Details</a> @*href="/book/getonebook/@book.Id"*@
                                </div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </svg>
                </div>
            </div>
        }

    </div>
</div>
