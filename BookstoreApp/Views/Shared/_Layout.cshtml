<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>

    <title>@ViewData["Title"]</title>
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        @*<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="" 
              crossorigin="anonymous">
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3 box-shadow">

        <img src="~/images/logo.png" asp-append-version="true" style="height: 30px; width:30px " class="m-2">
        <a class="navbar-brand" href="/home" @*asp-controlller="Home" asp-action="Index"*@>Book Store</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @*href="/home"*@
                    <a class="nav-link" asp-controller="home" asp-action="index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/aboutus">About</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/home/contactus">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/book/getallbooks">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="book"  asp-action="addNewBook">Add a Book</a>
                </li>
            </ul>
            <form class="form-inline mx-5 my-lg-0">
                <button class="btn btn-outline-success m-2 my-sm-0" type="submit">Login</button>
                <button class="btn btn-outline-success m-2 my-sm-0" type="submit">Register</button>
            </form>
        </div>
    </nav>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top card-footer text-muted text-center fixed-bottom">
        <div class="container">
            Copyright &copy; BookStore @DateTime.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>
